<div class="mt-4">
    {% if pagination.nbPages > 0 %}
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                {% if pagination.page > 1 %}
                    <li class="page-item"><a class="page-link" href="{{ path(pagination.nameRoute, pagination.paramsRoute|merge({'page': 1})) }}">
                            <<
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{ path(pagination.nameRoute,
                            pagination.paramsRoute|merge({'page': pagination.page-1})) }}">
                            <
                        </a>
                    </li>
                {% endif %}

                {% for p in range(max(pagination.page-1, 1), min(pagination.page+2, pagination.nbPages)) %}
                    <li {% if p == pagination.page %}class="active page-item"{% endif %}>
                        <a class="page-link" href="{{ path(pagination.nameRoute, pagination.paramsRoute|merge({'page': p})) }}">
                            {{ p }}
                        </a>
                    </li>
                {% endfor %}

                {% if pagination.page < pagination.nbPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(pagination.nameRoute,
                            pagination.paramsRoute|merge({'page': pagination.page+1})) }}">
                            >
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="{{ path(pagination.nameRoute,
                            pagination.paramsRoute|merge({'page': pagination.nbPages})) }}">
                            >>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
</div>