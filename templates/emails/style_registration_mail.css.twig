body {
        padding: 10px;
    }

    h2 {
        text-align: center;
        padding: 20px;
        color: black;
    }

    .center-div {
        margin: 0 auto;
        width: 300px;
        border-radius: 5px;
        border: 2px black solid;
        padding: 20px ;
        text-align: center;
    }

    .btn-lien {
        text-decoration: none;
    }

    .login-btn {
        border: 2px solid transparent;
        background: #303030;
        color: #ffffff;
        font-size: 16px;
        line-height: 25px;
        padding-top: 10px;
        padding-bottom: 10px;
        text-shadow: none;
        border-radius: 3px;
        box-shadow: none;
        transition: 0.25s;
        display: block;
        width: 252px;
        margin: 0 auto;
    }

    .btn-lien:hover {
        text-decoration: none;
    }

    .login-btn:focus, :active {
        outline: none;
    }

    .title-mail {
        font-size: 15px;
        text-align: center;
        color: black;
    }

    img {
        position: relative;
        width: 200px;
        border: 0;
        margin: 0 auto;
    }

    .ps {
        padding-top: 50px;
        color: black;
    }
