{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="bloc-admin">

    <table>
        <thead>
        <tr>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Groupe</th>
            <th scope="col">Email</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Voir</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td scope="row" data-label="Prénom">{{ user.firstname | capitalize }}</td>
            <td data-label="Nom">{{ user.lastname | upper }}</td>
            <td data-label="Nom d'artiste">{{ user.artistName | capitalize }}</td>
            <td data-label="Email">{{ user.email }}</td>
            <td data-label="Téléphone">{{ user.phoneNumber }}</td>
            <td><a href="{{ path('admin_user_show', {id : user.id}) }}"><i class="far fa-eye"></i></a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}