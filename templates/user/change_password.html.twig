{% extends 'base.html.twig' %}

{% block title %}Changer de mot de passe{% endblock %}

{% block body %}
    <div class="container">
    <h1>Modifier votre mot de passe</h1>

    <div class="label-title">
        {{ form_start(form) }}
        {{ form_errors(form.newPassword) }}
        {{ form_widget(form) }}
    </div>


        <a class="btn-secondary btn" href="{{ path('user_index') }}">Retour au profil</a>
        <button type="submit" class="btn btn-success m-4">
            <i class="fa fa-save" aria-hidden="true"></i>
        </button>
    {{ form_end(form) }}

    </div>
{% endblock %}